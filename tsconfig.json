{
    "compilerOptions": {
      "module"            : "commonjs",
      "noImplicitAny"     : true,
      "removeComments"    : true,
      "preserveConstEnums": true,
      "sourceMap"         : true,
      "outDir"            : "dst_server/"
    },
    "include"        : [
      "server_*/*",
      "server_*/**/*",
      "share/*",
      "share/**/*"
    ],
    "exclude"        : [
      "node_modules",
      "**/*.spec.ts"
    ]
  }