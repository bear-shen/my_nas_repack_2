{
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dst/"
  },
  "include": ["*", "**/*", "../share/*", "../share/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "zzz",
    "zzz/*",
    "**/zzz/*",
    "../share/archive",
    "archive",
    "archive/*",
    "archive/**/*"
  ]
}
