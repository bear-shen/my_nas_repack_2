{
  "extends"        : "@vue/tsconfig/tsconfig.dom.json",
  "include"        : ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude"        : [
	"src/**/__tests__/*",
	"public/pdfjs/*",
	"public/pdfjs/**/*"
  ],
  "compilerOptions": {
	"composite"          : true,
	//	"noEmit"   : true,
	"emitDeclarationOnly": true,
	"baseUrl"            : ".",
	"paths"              : {
	  "@/*": ["./src/*"]
	}
  },
  "files"          : []
}